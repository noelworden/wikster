<h1>Make a new Wiki</h1>
  <%= form_for @wiki do |w| %>
   <%= w.label :title %>
   <%= w.text_field :title, class: 'form-control', placeholder:"Wiki title" %>

   <%= w.label :body %>
   <%= w.text_area :body, rows: 8, class: 'form-control', placeholder: "What's the Wiki going to say?" %>

   <% if current_user.premium? || current_user.admin? %>
      <div class="form-group">
        <%= w.label :private, class: 'checkbox' do %>
        Private wiki <%= w.check_box :private %>
        <% end %>
        <%#= button_to "Add Collaborators", new_wiki_collaborator_path(wiki_id: @wiki) %>
      </div>

  <% end %>

   <%= w.submit "Save" %>
 <% end %>
<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |w| %>
      <div class="form-group">
        <%= w.label :title %>
        <%= w.text_field :title, class: 'form-control', placeholder: "Enter Wiki Title" %>
      </div>
      <div class="form-group">
        <%= w.label :body %>
        <%= w.text_field :body, class: 'form-control', placeholder: "What will your Wiki be about?" %>
        </div>
      <div class="form-group">
        <%= w.submit "Save", class: 'btn btn-success' %>
      </div>
      <% end %>
  </div>
</div>
